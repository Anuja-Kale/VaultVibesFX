<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="800.0" minWidth="1500.0" style="-fx-text-fill: white; -fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SignupSceneController">
   <children>
      <AnchorPane layoutX="1.0" minHeight="600.0" minWidth="1000.0" prefHeight="802.0" prefWidth="1500.0" style="-fx-text-fill: white; -fx-background-color: black;">
         <children>
            <Label fx:id="lblWalletName" alignment="CENTER" contentDisplay="CENTER" layoutX="650.0" layoutY="80.0" prefHeight="58.0" prefWidth="203.0" text="SignUp" textFill="white">
               <font>
                  <Font name="System Bold" size="34.0" />
               </font>
            </Label>
            <TextField fx:id="txtEmail" layoutX="601.0" layoutY="313.0" prefHeight="42.0" prefWidth="309.0" promptText="Email" style="-fx-border-color: #d90429;">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <PasswordField fx:id="txtPassword" layoutX="602.0" layoutY="387.0" prefHeight="42.0" prefWidth="309.0" promptText="Password" style="-fx-border-color: #d90429;">
               <font>
                  <Font size="20.0" />
               </font>
            </PasswordField>
            <Button fx:id="btnRegister" layoutX="764.0" layoutY="470.0" mnemonicParsing="false" onAction="#handleRegisterAction" prefHeight="37.0" prefWidth="111.0" style="-fx-background-color: #d90429;" text="Register" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
            <Hyperlink fx:id="hyperlinkToLogin" layoutX="822.0" layoutY="537.0" onAction="#handleSwitchToLoginScene" prefHeight="23.0" prefWidth="67.0" text="Click Here" textFill="#d90429" />
            <Label fx:id="lblSwitchToLogin" layoutX="626.0" layoutY="540.0" text="Already have an account ? To Login, " textFill="white" />
            <TextField fx:id="txtName" layoutX="601.0" layoutY="175.0" prefHeight="43.0" prefWidth="310.0" promptText="Name" style="-fx-border-color: #d90429;">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <TextField fx:id="txtPhone" layoutX="601.0" layoutY="244.0" prefHeight="43.0" prefWidth="310.0" promptText="Phone" style="-fx-border-color: #d90429;">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Button fx:id="btnVerifyEmail" layoutX="632.0" layoutY="470.0" mnemonicParsing="false" onAction="#handleVerifyEmailAction" prefHeight="37.0" prefWidth="111.0" style="-fx-background-color: #d90429;" text="Verify Email" textFill="#fffdfd">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
            <Button fx:id="btnChangeEmail" layoutX="932.0" layoutY="309.0" mnemonicParsing="false" onAction="#handleChangeEmailAction" prefHeight="45.0" prefWidth="108.0" style="-fx-background-color: #d90429;" text="Change Email" textFill="#fcfcfc">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
